<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/lvGetAll_imgThumbLivre"
        android:layout_width="@dimen/thumbWidth"
        android:layout_height="@dimen/thumbHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lvGetAll_imgThumbLivre"
        android:layout_toEndOf="@id/lvGetAll_imgThumbLivre"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lvGetAll_nameLivre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[NAME]"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>